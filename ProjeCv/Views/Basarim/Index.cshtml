
@using ProjeCv.Models.Entity
@model List<TBLAWARDS>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Basarim", FormMethod.Get))
{
    <p>
        <b>Aranacak Değer:</b>  @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>BAŞARIMLAR</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <th>@x.ID</th>
            <td>@x.AWARD</td>
            <td><a href="/Basarim/BasarimSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Basarim/BasarimGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
            }
    </tbody>
</table>

<a href="/Basarim/YeniBasarim/" class="btn btn-info">Yeni Başarım Ekle</a>

