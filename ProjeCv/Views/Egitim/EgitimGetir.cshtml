@model ProjeCv.Models.Entity.TBLEDUCATION

@{
    ViewBag.Title = "EgitimGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Egitim", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ID)
        @Html.TextBoxFor(m => m.ID, new { @class = "form-control" })
        <br />
        @Html.Label("BAŞLIK")
        @Html.TextBoxFor(m => m.TITLE, new { @class = "form-control" })
        <br />
        @Html.Label("ALT BAŞLIK")
        @Html.TextBoxFor(m => m.SUBTITLE, new { @class = "form-control" })
        <br />
        @Html.Label("BÖLÜM")
        @Html.TextBoxFor(m => m.DEPARTMENT, new { @class = "form-control" })
        <br />
        @Html.Label("GENEL ORTALAMA")
        @Html.TextBoxFor(m => m.GPA, new { @class = "form-control" })
        <br />
        <button class="btn btn-primary">Eğitim Güncelle</button>

    </div>


}

